{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "CloudFormation template for S3 bucket creation for RTT object store",
    "Resources": {
      "VendorLogosBucket": {
        "Type": "AWS::S3::Bucket",
        "Properties": {
          "BucketName": "vendor-logos-bucket",
          "CorsConfiguration": {
            "CorsRules": [
                {
                    "AllowedHeaders": ["*"],
                    "AllowedMethods": ["GET", "PUT", "POST", "DELETE", "HEAD"],
                    "AllowedOrigins": ["https://ec2-3-95-180-146.compute-1.amazonaws.com"],
                    "ExposeHeaders": [],
                    "MaxAge": 3000
                }
            ]
        },
          "VersioningConfiguration": {
            "Status": "Enabled"
          }
        }
      }
    },
    "Outputs": {
      "BucketName": {
        "Description": "Name of the S3 bucket",
        "Value": {
          "Ref": "VendorLogosBucket"
        }
      },
      "BucketARN": {
        "Description": "ARN of the S3 bucket",
        "Value": {
          "Fn::GetAtt": ["VendorLogosBucket", "Arn"]
        }
      }
    }
  }
  