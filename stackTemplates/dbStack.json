{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "AWS CloudFormation Template for VPC, Subnets, DB Subnet Group, Security Group, and RDS MySQL Instance",
    "Resources": {
        "MyVPC": {
            "Type": "AWS::EC2::VPC",
            "Properties": {
                "CidrBlock": "10.0.0.0/16",
                "EnableDnsHostnames": true,
                "EnableDnsSupport": true
            }
        },
        "MySubnetOne": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "VpcId": {"Ref": "MyVPC"},
                "CidrBlock": "10.0.1.0/24",
                "AvailabilityZone": "us-east-1a"
            }
        },
        "MySubnetTwo": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "VpcId": {"Ref": "MyVPC"},
                "CidrBlock": "10.0.2.0/24",
                "AvailabilityZone": "us-east-1b"
            }
        },
        "MyDBSubnetGroup": {
            "Type": "AWS::RDS::DBSubnetGroup",
            "Properties": {
                "DBSubnetGroupDescription": "My DB subnet group",
                "SubnetIds": [{"Ref": "MySubnetOne"}, {"Ref": "MySubnetTwo"}]
            }
        },
        "MySecurityGroup": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": "Security Group for RDS DB Instance",
                "VpcId": {"Ref": "MyVPC"},
                "SecurityGroupIngress": [{
                    "IpProtocol": "tcp",
                    "FromPort": "3306",
                    "ToPort": "3306",
                    "CidrIp": "0.0.0.0/0"
                }]
            }
        },
        "MyDBInstance": {
            "Type": "AWS::RDS::DBInstance",
            "Properties": {
                "AllocatedStorage": "20",
                "DBInstanceClass": "db.t2.micro",
                "Engine": "MySQL",
                "EngineVersion": "8.0",
                "MasterUsername": "dbmaster",
                "MasterUserPassword": "masterUser123!",
                "DBName": "RttAppDB",
                "BackupRetentionPeriod": 7,
                "DBSubnetGroupName": {"Ref": "MyDBSubnetGroup"},
                "VPCSecurityGroups": [{"Ref": "MySecurityGroup"}],
                "MultiAZ": false
            }
        }
    },
    "Outputs": {
        "DBInstanceEndpoint": {
            "Description": "Connection endpoint of the RDS instance",
            "Value": {"Fn::GetAtt": ["MyDBInstance", "Endpoint.Address"]}
        }
    }
}
